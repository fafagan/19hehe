<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="false" >
        <shape>
            <!--<solid android:color="#0f0"/>-->
            <!--android:dashGap="10dp" android:dashWidth="20dp"-->
            <stroke android:color="#f00" android:width="5dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
            <corners android:radius="40dp" />
            <!--<gradient android:type="linear" android:startColor="#f00" android:centerColor="#0f0" android:endColor="#00f" android:angle="270"/>   -->
            <gradient android:type="radial" android:gradientRadius="70dp" android:startColor="#f00" android:centerColor="#0f0" android:endColor="#00f"/>   
        </shape>
    </item>



    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#ff0"/>
        </shape>
    </item>
</selector>